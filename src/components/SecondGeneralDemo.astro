---
import LongSection from './LongSection.astro';
import { generalDemoData } from '../data/general_demo';
---

<LongSection
  title="MÁXIMO CONFORT"
  subtitle="Balanceo y elevación totalmente personalizables"
  color="white"
  pt="pt-5 xl:pt-20"
  textSize="text-[36px] xl:text-[40px]"
>
  <article slot="main" class="flex flex-col items-center justify-center">
    <div
      class="text-gray-100 flex flex-col lg:flex-row justify-around gap-6 xl:gap-24 py-10 px-5"
    >
      {
        generalDemoData.map((product) => (
          <div class="flex flex-col items-center justify-center gap-2">
            <video
              src={product.video}
              loop
              autoplay
              muted
              playsinline
              class="rounded-2xl w-full max-w-lg xl:max-w-2xl"
            />
          </div>
        ))
      }
    </div>
  </article>

  <div slot="footer" class="pb-10">
    <a
      class="border-[3px] backdrop-blur-sm text-sm rounded font-medium text-white px-12 py-2 inline-block hover:bg-white hover:text-black transition-colors"
      href="#buysection"
    >
      COMPRAR AHORA</a
    >
  </div>

  <div
    slot="background"
    class="bg-gradient-to-r from-zinc-950 to-zinc-900 object-center object-cover h-full w-full"
  >
  </div>
</LongSection>
